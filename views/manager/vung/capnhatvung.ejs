									<form name="" action="/quanly/vung/capnhatvung/" method="post">
									<table class="table table-bordered">
										<input type="text" value="<%= regData.region_id%>" style="display: none" id="idhide" name="region_id"/></td>
										<tr>
											<td class="text-right" style="font-weight:bold;">Tên vùng:</td>
											<td><input type="text" value="<%= regData.region_name%>" class="form-control" id="region_name" name="region_name"/></td>
